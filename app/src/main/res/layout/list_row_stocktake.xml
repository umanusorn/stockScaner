<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:id="@+id/row_list_comment_root_view"
                android:background="?android:attr/selectableItemBackground"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"

                android:backgroundTintMode="src_atop">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_listitem_height"
            android:padding="0dp"
            android:id="@+id/rowBg"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

   <!--     android:layout_marginLeft="@dimen/md_listitem_margin_left"
        android:layout_marginStart="@dimen/md_listitem_margin_left"-->

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/relativeLayout2">


            <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"

                    android:text="DateTime"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:id="@+id/datetime"
                    android:textSize="@dimen/textsizeBody"
                    android:layout_alignParentTop="true"/>



            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Location"
                    android:id="@+id/location"
                    android:padding="2dp"
                    android:paddingStart="35dp"
                    android:textSize="@dimen/textsizeBody"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/status"
                    android:layout_marginEnd="10dp"/>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:text="Status"
                    android:textSize="@dimen/textsizeBody"
                    android:id="@+id/status"
                    android:gravity="center"
                    android:layout_marginEnd="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>

            <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:text="10|990"
                    android:textSize="@dimen/textsizeBody"
                    android:id="@+id/stocktake_qty"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/datetime"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
