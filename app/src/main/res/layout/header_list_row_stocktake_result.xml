<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:id="@+id/row_list_comment_root_view"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@color/blue_300"
                android:layout_below="@+id/relativeLayout"
                android:backgroundTintMode="src_atop">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_listitem_height"
            android:padding="0dp"
            android:id="@+id/rowBg"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/md_listitem_margin_left"
                android:layout_marginStart="@dimen/md_listitem_margin_left"

                android:layout_marginRight="@dimen/md_listitem_margin_left"
                android:layout_marginEnd="@dimen/md_listitem_margin_left"
                android:layout_centerVertical="true">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Barcode"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:id="@+id/datetime"
                    android:textSize="@dimen/textsizeSubHeading"
                    android:layout_alignParentTop="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Qty"
                    android:id="@+id/location"
                    android:padding="2dp"
                    android:textSize="@dimen/textsizeSubHeading"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:text="Action"
                    android:textSize="@dimen/textsizeSubHeading"
                    android:id="@+id/status"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
