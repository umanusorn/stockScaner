<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".LandingActivity">

    <include
            layout="@layout/core_toolbar"
            android:id="@+id/include5"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include5"
            android:paddingBottom="20dp"
            android:id="@+id/relativeLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location"
                android:id="@+id/locationTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Started On: "
                    android:id="@+id/startedOn"
                    android:layout_alignTop="@+id/dateTitle"
                    android:layout_alignStart="@+id/locationTitle"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="12 Nov 2015"
                android:id="@+id/dateTitle"
                android:layout_below="@+id/locationTitle"
                android:layout_toEndOf="@+id/startedOn"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Completed"
                android:id="@+id/statusTitle"
                android:layout_below="@+id/startedOn"
                android:layout_alignStart="@+id/startedOn"/>
    </RelativeLayout>

    <FrameLayout
            android:id="@+id/recycle_content_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:padding="0dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_below="@+id/relativeLayout"/>

    <include layout="@layout/bottombar_stocktake_result"
            >

    </include>

</RelativeLayout>
