<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".LandingActivity">

    <include
            layout="@layout/core_toolbar"
            android:id="@+id/include5"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include5"
            android:paddingBottom="20dp"
            android:id="@+id/relativeLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location"
                android:id="@+id/locationTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="24dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Started On: "
                    android:id="@+id/startedOn"
                    android:layout_alignTop="@+id/dateTitle"
                    android:layout_alignStart="@+id/locationTitle"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="12 Nov 2015"
                android:id="@+id/dateTitle"
                android:layout_below="@+id/locationTitle"
                android:layout_toEndOf="@+id/startedOn"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Completed"
                android:id="@+id/statusTitle"
                android:layout_below="@+id/startedOn"
                android:layout_alignStart="@+id/startedOn"/>
    </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:id="@+id/row_list_comment_root_view"
                        android:background="@drawable/list_bg"
                        android:layout_alignParentStart="true"
                        android:backgroundTintMode="src_atop"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/rowBg">

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:padding="0dp"
                android:id="@+id/rowBg"
                android:layout_below="@+id/relativeLayout"
                android:background="@color/blue_300"
                android:layout_alignParentStart="true">


                <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true">


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Barcode"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:id="@+id/datetime"
                                android:textSize="15sp"
                                android:layout_alignParentTop="true"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Qty"
                                android:id="@+id/location"
                                android:padding="2dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_alignTop="@+id/status"
                                android:layout_centerHorizontal="true"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:textColor="@color/black"
                                android:text="Action"
                                android:textSize="15sp"
                                android:id="@+id/status"

                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="22dp"/>
                </RelativeLayout>

        </RelativeLayout>

    <FrameLayout
            android:id="@+id/recycle_content_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:padding="0dp"

            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_below="@+id/rowBg"
            android:layout_above="@+id/include"/>

    <include layout="@layout/bottombar_stocktake_result"
             android:id="@+id/include">

    </include>

</RelativeLayout>
